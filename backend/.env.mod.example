# Copy to backend/.env.mod when running the modular stack (docker-compose.mod.yml)
# Keep production/local-dev env files separate so you can switch stacks quickly.

# Core Django config (mod stack only)
DJANGO_ENV=development
DEBUG=1
SECRET_KEY=django-insecure-mod-stack-only
ADMIN_URL=admin/
DEFAULT_TENANT_DOMAIN_SUFFIX=localhost
FRONTEND_URL=http://acme.localhost:5173  # Vite dev server hitting the mod API

# Database / cache wiring â€“ matches mod_db + mod_redis service names
DATABASE_URL=postgresql://postgres:devpass@mod_db:5432/statuswatch_mod
REDIS_URL=redis://mod_redis:6379/0
CELERY_BROKER_URL=redis://mod_redis:6379/0
CELERY_RESULT_BACKEND=redis://mod_redis:6379/1

